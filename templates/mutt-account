folder-hook +$config/* '\\
set realname  = \"$realname\"; \\
set sendmail  = \"/usr/bin/msmtp -a $config\"; \\
set from      = \"$account\"; \\
set spoolfile = \"+$config/Inbox\"; \\
set postponed = \"+$config/Drafts\"; \\
set mbox      = \"+$config/Archive\"; \\
setenv NOTMUCH_CONFIG \$HOME/.notmuch-config-$config \\
'
